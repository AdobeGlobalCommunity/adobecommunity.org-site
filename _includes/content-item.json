{
    "title": {{item.title | json2}},
    "summary": {% if item.summary %}{{item.summary | json2 }}{% else %}{{ item.content | strip_html | truncatewords: 150 | json2 }}{% endif %},
    "tags": [{% for tag in item.tags %}{{ tag | json2 }}{%unless forloop.last %}, {%endunless%}{%endfor%}],
    "url": "{{item.url}}",
    "layout": {{item.layout | json2}}
}