---
---

{
  {% for article in site.articles %}
    "{{article.url | remove: '/learn/articles/'}}": {
      "jcr:primaryType": "sling:Page",
      "jcr:content": {
        "author": "{{article.author}}",
        "hideInSitemap": false,
        "image": "{{article.image}}",
        "jcr:title": "{{article.title}}",
        "original": "{{article.original}}",
        "publishDate": "{{article.date | date: "%Y-%m-%d"}}",
        "published": true,
        "sling:resourceType": "adobecommunity-org/components/pages/post",
        "sling:template": "/conf/adobecommunity-org/site/templates/post".
        "snippet": "{{content | strip_html | truncatewords: 150}}"
      }
    }
  {% endfor %}
}
  
