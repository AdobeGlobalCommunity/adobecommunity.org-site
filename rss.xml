<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
	<channel>
		<title>{{ site.title }}</title>
		<link>{{ site.url }}/</link>
		<atom:link href="{{ site.url }}/rss.xml" rel="self" type="application/rss+xml" />
		{% for post in site.articles limit:10 %}
			<item>
				<title><![CDATA[{{ post.title | strip_html }}]]></title>
				<description><![CDATA[{{ post.content | strip_html | truncatewords: 50 }}]]></description>
				<content:encoded>
					<![CDATA[
						<img src="{{ post.image }}" title="{{ post.title }}" />
						{{ post.content | strip_html | truncatewords: 200 }}
					]]>
				</content:encoded>
				{% if post.image %}
					<enclosure length="0" type="image/png" url="{{ post.image }}" />
				{% endif %}
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
