---
---

[
    {% assign events = site.events | sort: event_date | reverse %}
    {% for event in events %}
        {
            "cta": {{event.cta | json2}},
            "event_date":"{{ event.event_date | date_to_xmlschema}}",
            "date": {
                "dayofmonth": "{{ event.event_date | date: '%e'}}",
                "dayofweek": "{{ event.event_date | date: '%A'}}",
                "time": "{{ event.event_time }}",
                "month": "{{ event.event_date | date: '%B'}}",
                "year": "{{ event.event_date | date: '%Y'}}",
                "dateStr": "{{ event.event_date | date: site.date_format }} at {{ event.event_time }}"
            },
            "featured": {{event.featured | json2}},
            "image": {{ event.image | json2 }},
            "link": {{event.link | json2}},
            "location_name": {{ event.location_name | json2 }},
            "location_link": {{ event.location_link | json2 }},
            "presenter": {{ event.presenter | json2 }},
            "summary": {{ event.content | strip_html | replace: '&nbsp;', ' ' | truncatewords: 20 | json2 }},
            "tags": [{% for tag in event.tags %}{{ tag | json2 }}{%unless forloop.last %}, {%endunless%}{%endfor%}],
            "title": {{event.title | json2 }},
            "type": {{event.type | json2 }},
            "link": {{event.link | json2}},
            "url": "{{event.url}}"
        }{% unless forloop.last%},{%endunless%}
    {% endfor %}
]