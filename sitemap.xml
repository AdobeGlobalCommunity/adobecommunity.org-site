<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for post in site.posts %}
    <url>
        <loc>{{ site.url }}{{ post.url | remove: 'index.html' }}</loc>
    	<changefreq>never</changefreq>
    </url>
    {% endfor %}
    {% for group in site.groups %}
    <url>
        <loc>{{ site.url }}{{ group.url | remove: 'index.html' }}</loc>
    	<changefreq>daily</changefreq>
    </url>
    {% endfor %}
    {% for event in site.events %}
    <url>
        <loc>{{ site.url }}{{ event.url | remove: 'index.html' }}</loc>
    	<changefreq>daily</changefreq>
    </url>
    {% endfor %}
    {% for article in site.articles %}
    <url>
        <loc>{{ site.url }}{{ article.url | remove: 'index.html' }}</loc>
    	<changefreq>never</changefreq>
    </url>
    {% endfor %}
    {% for page in site.pages %}
    {% if page.exclude_sitemap != true and page.layout != nil %}
    <url>
        <loc>{{ site.url }}{{ page.url | remove: 'index.html' | replace: ' ', '%20' }}</loc>
    	<changefreq>monthly</changefreq>
    </url>
    {% endif %}
    {% endfor %}
    <url>
    	<loc>{{ site.url }}/</loc>
      	<changefreq>always</changefreq>
    </url>
</urlset>
