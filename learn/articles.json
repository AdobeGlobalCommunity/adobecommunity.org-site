---
---

[
    {% for article in site.articles limit:200 %}
        {
            "author": {{article.author | json2}},
            "date": "{{ article.date | date_to_xmlschema }}",
            "dateStr": "{{ article.date | date_to_string }}",
            "even": {% cycle 'true', 'false' %},
            "original": {{ article.original | json2 }},
            "short_summary": {{ article.content | strip_html | truncatewords: 20 | json2 }},
            "summary": {{ article.content | strip_html | truncatewords: 150 | json2 }},
            "tags": [{% for tag in article.tags %}{{ tag | json2 }}{%unless forloop.last %}, {%endunless%}{%endfor%}],
            "image": {{ article.image | json2 }},
            "index": {{forloop.index}},
            "title": {{article.title | json2 }},
            "url": "{{article.url}}"
        }{% unless forloop.last%},{%endunless%}
    {% endfor %}
] 